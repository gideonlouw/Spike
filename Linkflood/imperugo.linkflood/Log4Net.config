<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<appender name="GeneralLog" type="log4net.Appender.RollingFileAppender">
		<file value="App_Data/Logs/general.txt" />
		<maximumFileSize value="5000KB" />
		<rollingStyle value="Size" />
		<maxSizeRollBackups value="10" />
		<threshold value="WARN"/>
		<layout type="log4net.Layout.PatternLayout">
			<!--
			Below the request info incuded in the ThreadContext
			%property{Url} 
			%property{UrlReferrer} 
			%property{UserAgent} 
			%property{UserHostName} 
			%property{ServerVariables} 
			%property{Form} 
			%property{RawURL} 
			%property{ServerName} 
			%property{ThreadLanguage} 
			-->
			<conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message %property{log4net:HostName} [%property{Url}] [%property{UrlReferrer}] [%property{UserAgent}] %newline %exception" />
		</layout>
	</appender>

	<appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
		<to value="imperugo@gmail.com" />
		<from value="scheduler@tostring.it" />
		<subject value="[Scheduler] New Event" />
		<smtpHost value="smtp.tostring.it" />
		<bufferSize value="512" />
		<lossy value="true" />
		<evaluator type="log4net.Core.LevelEvaluator">
			<threshold value="INFO"/>
		</evaluator>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%newline%date [%thread] %-5level %logger [%property{NDC}] - %message%newline%newline%newline" />
		</layout>
	</appender>

	<!-- levels: DEBUG, INFO, WARN, ERROR, FATAL -->
	<root>
		<appender-ref ref="GeneralLog" />
		<appender-ref ref="SmtpAppender" />
	</root>

</log4net>